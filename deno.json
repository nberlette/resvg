{
  "name": "@nick/resvg",
  "version": "0.1.0-rc.1",
  "license": "MIT",
  "author": {
    "name": "Nicholas Berlette",
    "email": "nick@berlette.com",
    "url": "https://github.com/nberlette"
  },
  "tasks": {
    "build:wasm": "deno run -Aq jsr:@deno/wasmbuild@0.19.1 --out lib --inline",
    "compress": "deno run -Aq scripts/compress.ts lib/resvg.js",
    "build:core": "deno run build:wasm --no-default-features --features \"fonts-core\"",
    "build:core:br": "deno run build:wasm --no-default-features --features \"brotli fonts-core\"",
    "build:lite": "deno run build:wasm --no-default-features --features \"lite\"",
    "build:lite:br": "deno run build:wasm --no-default-features --features \"brotli\"",
    "build:full": "deno run build:wasm --no-default-features --features \"brotli fonts-all\"",
    "build": "deno run build:core && deno run compress"
  },
  "exports": {
    ".": "./mod.ts",
    "./options": "./options.ts",
    "./wasm": "./lib/resvg.js",
    "./wasm.js": "./lib/resvg.js",
    "./wasm.d.ts": "./lib/resvg.d.ts"
  },
  "imports": {
    "@nick/utf8": "jsr:@nick/utf8@^0.3.3"
  },
  "publish": {
    "include": [
      "**/*.ts",
      "**/*.js",
      "**/*.md",
      "**/*.json",
      "**/*.wasm"
    ],
    "exclude": [
      "!./lib",
      "**/*.test.*",
      "**/*.bench.*",
      "**/.*"
    ]
  }
}
